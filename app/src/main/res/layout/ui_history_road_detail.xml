<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_main"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <include
        layout="@layout/ui_main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/ui_backgroud">

        <cn.qimate.bike.core.widget.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp10"
                android:paddingRight="@dimen/dp10">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45">

                    <TextView
                        android:id="@+id/history_roadDetailUI_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp16"
                        android:textColor="@color/tx_black"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>

                    <TextView
                        android:id="@+id/history_roadDetailUI_bikeCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp12"
                        android:textColor="#9c9c9c"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#eee"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tx_black"
                        android:textSize="@dimen/sp14"
                        android:text="车辆编号:"/>

                    <TextView
                        android:id="@+id/history_roadDetailUI_bikeNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tx_black_light"
                        android:textSize="@dimen/sp12"
                        android:text=""
                        android:layout_marginLeft="@dimen/dp5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tx_black"
                        android:textSize="@dimen/sp14"
                        android:text="租车开始时间:"/>

                    <TextView
                        android:id="@+id/history_roadDetailUI_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tx_black_light"
                        android:textSize="@dimen/sp12"
                        android:text=""
                        android:layout_marginLeft="@dimen/dp5"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tx_black"
                        android:textSize="@dimen/sp14"
                        android:text="租车结束时间:"/>

                    <TextView
                        android:id="@+id/history_roadDetailUI_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tx_black_light"
                        android:textSize="@dimen/sp12"
                        android:text=""
                        android:layout_marginLeft="@dimen/dp5"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="#eee"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dp5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical|right">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="骑行"
                                android:textSize="@dimen/sp14"
                                android:textColor="@color/tx_black"/>

                            <TextView
                                android:id="@+id/history_roadDetailUI_totalMintues"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#f87068"
                                android:textSize="@dimen/sp14"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分钟，花费"
                                android:textSize="@dimen/sp14"
                                android:textColor="@color/tx_black"/>

                            <TextView
                                android:id="@+id/history_roadDetailUI_totalMoney"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#f87068"
                                android:textSize="@dimen/sp14"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元"
                                android:textSize="@dimen/sp14"
                                android:textColor="@color/tx_black"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp5"
                            android:gravity="center_vertical|right"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/history_roadDetailUI_freeDaysText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp12"
                                android:textColor="@color/tx_black"
                                android:text=""
                                android:visibility="gone"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp12"
                                android:textColor="@color/tx_black"
                                android:text="还车须至校内地图红色区域，封顶5元/天"
                                android:layout_marginTop="@dimen/dp5"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <Button
                    android:id="@+id/history_roadDetailUI_submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@drawable/btn_road_detail"
                    android:maxHeight="0dp"
                    android:text="查看地图轨迹"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:gravity="center"/>

                <RelativeLayout
                    android:id="@+id/history_roadDetailUI_imagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginBottom="@dimen/dp25">

                    <cn.qimate.bike.core.widget.MyPagerGalleryView
                        android:id="@+id/history_roadDetailUI_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@null"
                        android:scaleType="fitXY"
                        android:src="@drawable/empty_photo" />

                    <LinearLayout
                        android:id="@+id/history_roadDetailUI_pointLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dip"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </cn.qimate.bike.core.widget.MyScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="#a3a2a2"/>
    </LinearLayout>
</LinearLayout>
