<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invate_code_bcg"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">

    <ImageView
        android:id="@+id/ui_inviteCode_backImage"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:background="@null"
        android:src="@drawable/back_image"
        android:scaleType="centerInside"
        android:scrollbars="none"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp15"
        app:contentPadding="0dp"
        android:orientation="vertical"
        app:cardBackgroundColor="#ddffffff"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp15"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码："
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/tx_black"/>
                <TextView
                    android:id="@+id/ui_inviteCode_codeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="@dimen/sp14"
                    android:text=""/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ui_inviteCode_redPacketLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp15"
                android:gravity="bottom">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ui_inviteCode_redPacketText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="奖励天数"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp14"/>
                </LinearLayout>
                <View
                    android:layout_width="@dimen/line_height"
                    android:layout_height="@dimen/dp25"
                    android:background="@color/gray"
                    android:layout_marginBottom="@dimen/dp10"/>
                <LinearLayout
                    android:id="@+id/ui_inviteCode_countLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/ui_inviteCode_countText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/red"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:text="好友数量"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/sp14"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/gray"
                android:layout_marginTop="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:textColor="@color/tx_black"
                android:text="活动详情"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（1）邀请好友认证通过奖励您3天免费骑行。"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/sp14"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp5"
                android:paddingBottom="@dimen/dp10"
                android:lineSpacingExtra="@dimen/dp5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（2）好友买30天月卡奖励您7天免费骑行。"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/sp14"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp5"
                android:paddingBottom="@dimen/dp10"
                android:lineSpacingExtra="@dimen/dp5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（3）好友买90天季卡奖励您15天免费骑行。"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/tx_black"
                android:textSize="@dimen/sp14"
                android:paddingLeft="@dimen/dp15"
                android:paddingRight="@dimen/dp5"
                android:paddingBottom="@dimen/dp10"
                android:lineSpacingExtra="@dimen/dp5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp40"
                android:gravity="center">

                <Button
                    android:id="@+id/ui_invateCode_inviteBtn"
                    android:layout_width="@dimen/dp90"
                    android:layout_height="@dimen/dp30"
                    android:background="@drawable/convert_btn_bcg"
                    android:gravity="center"
                    android:text="去邀请"
                    android:textSize="@dimen/sp14"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
