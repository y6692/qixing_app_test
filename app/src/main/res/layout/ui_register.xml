<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_main"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <include
        layout="@layout/ui_main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f7f7f7">

        <cn.qimate.test.core.widget.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#f7f7f7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/registerUI_headLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp160"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#f7f7f7">

                        <ImageView
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:background="@null"
                            android:scaleType="centerInside"
                            android:src="@drawable/login_icon" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_feedback_edit"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号:"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/tx_black"/>

                        <cn.qimate.test.core.widget.ClearEditText
                            android:id="@+id/registerUI_userName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:drawableRight="@drawable/delete_selector"
                            android:hint="请输入您的手机号码"
                            android:inputType="numberDecimal"
                            android:maxLength="11"
                            android:paddingBottom="0dp"
                            android:paddingLeft="@dimen/dp20"
                            android:paddingRight="0dp"
                            android:textColorHint="#ceced4"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="#ededed"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="密码:"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/tx_black"/>

                        <cn.qimate.test.core.widget.ClearEditText
                            android:id="@+id/registernUI_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableRight="@drawable/delete_selector"
                            android:hint="请输入密码"
                            android:inputType="textPassword"
                            android:paddingBottom="0dp"
                            android:paddingLeft="@dimen/dp30"
                            android:paddingRight="0dp"
                            android:textColorHint="#ceced4"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/line_height"
                        android:background="#ededed"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp45"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="确认密码:"
                            android:textSize="@dimen/sp14"
                            android:textColor="@color/tx_black"/>

                        <cn.qimate.test.core.widget.ClearEditText
                            android:id="@+id/registerUI_againpassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/dp10"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableRight="@drawable/delete_selector"
                            android:hint="再次输入密码"
                            android:inputType="textPassword"
                            android:paddingBottom="0dp"
                            android:paddingLeft="@dimen/dp5"
                            android:paddingRight="0dp"
                            android:textColorHint="#ceced4"
                            android:textSize="@dimen/sp12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_feedback_edit">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="短信验证码："
                        android:textColor="@color/tx_black"
                        android:textSize="@dimen/sp14"
                        android:paddingLeft="@dimen/dp15"/>

                    <cn.qimate.test.core.widget.ClearEditText
                        android:id="@+id/registerUI_phoneNum_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableRight="@drawable/delete_selector"
                        android:hint="请输入验证码"
                        android:inputType="numberDecimal"
                        android:maxLength="6"
                        android:paddingBottom="0dp"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="0dp"
                        android:textColorHint="#ceced4"
                        android:textSize="@dimen/sp12"
                        android:textColor="@color/tx_black"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/registerUI_noteCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_marginRight="@dimen/dp5"
                        android:maxHeight="0dp"
                        android:background="#fb6758"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp14"
                        android:text="获取验证码"
                        android:gravity="center"/>
                </LinearLayout>

                <Button
                    android:id="@+id/registerUI_submitBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginLeft="@dimen/dp15"
                    android:layout_marginRight="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp35"
                    android:background="@drawable/btn_bcg"
                    android:maxHeight="0dp"
                    android:text="注册"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp16"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp15"
                    android:layout_marginTop="@dimen/dp5">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/tx_black"
                        android:textSize="@dimen/sp14"
                        android:text="注册即视为同意"/>

                    <TextView
                        android:id="@+id/registerUI_registerDeal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#fb7d71"
                        android:textSize="@dimen/sp14"
                        android:text="《用户注册协议》"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>
        </cn.qimate.test.core.widget.MyScrollView>
    </LinearLayout>
</LinearLayout>
