<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ui_fristView_mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ui_fristView_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp40"
            android:background="@null"
            android:src="@drawable/frist_view_title"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <ImageView
                android:id="@+id/ui_fristView_exImage_1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@null"
                android:src="@drawable/frist_view_no_lock"
                android:scaleType="centerInside"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <ImageView
                android:id="@+id/ui_fristView_exImage_2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@null"
                android:src="@drawable/fist_view_nor_lock"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10">

            <ImageView
                android:id="@+id/ui_fristView_exImage_3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@null"
                android:src="@drawable/frist_view_rule"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/dp10"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="@dimen/line_height"
        android:layout_height="@dimen/dp20"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"/>
    <ImageView
        android:id="@+id/ui_fristView_closeBtn"
        android:layout_width="@dimen/dp30"
        android:layout_height="@dimen/dp30"
        android:src="@drawable/close_icon"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"/>
</LinearLayout>
